#!/bin/sh
#
# Deletes "node_modules" folders in the current directory and in the direct
# sub-directories. This is useful when Git directories being NPM package are
# grouped together in a project directory.

# Exit on error
set -o errexit

for dir_path in $(find -maxdepth 3 -type d -name node_modules)
do
    echo "Deleting $dir_path"
    rm -rf "$dir_path"
done
